---
import Layout from "../layouts/Layout.astro";
import MenuItem from "../components/MenuItem.astro";
import MenuTitle from "../components/MenuTitle.astro";
import { BarSnacks, ALaCarte, Cheese, Dessert } from "../data/MenuItems.js";
---

<Layout title="CIPO | Menu">
  <main class="container grid-md">
    <div class="title">
      <a href="/"><img src="/cipo_logo.png" alt="CIPO logo" width="300" alt="CIPO logo" /></a>
    </div>

    <section>
      <section>
        <MenuTitle title="MENU" />
        <MenuItem
          item="Four dishes, 'Kitchens choice', chosen by the whole table"
          price="395"
        />
      </section>

      <section>
        <MenuTitle title="BAR SNACKS" />
        {
          BarSnacks.map((item) => (
            <MenuItem item={item.item} price={item.price} />
          ))
        }
      </section>

      <section>
        <MenuTitle title="Ã€ LA CARTE" />
        {
          ALaCarte.map((item) => (
            <MenuItem item={item.item} price={item.price} />
          ))
        }
      </section>

      <section>
        <MenuTitle title="CHEESE" />
        {Cheese.map((item) => <MenuItem item={item.item} price={item.price} />)}
      </section>

      <section>
        <MenuTitle title="DESSERT" />
        {
          Dessert.map((item) => (
            <MenuItem item={item.item} price={item.price} />
          ))
        }
      </section>
    </section>
  </main>
</Layout>

<style>
  .title {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .container {
    padding-inline: 1rem;
  }

  .title {
    margin-top: 6rem;
  }

  section:first-child {
    margin-top: 4rem;
  }

  section {
    margin-top: 1rem;
  }
</style>
