---
import "normalize.css";
import "@fontsource/montserrat";
import "spectre.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="manifest" href="/manifest.json" />
    <title>{title}</title>
  </head>
  <body>
    <slot />

    <footer class="text-center">
      <div class="content-small">
        <p>
          <span><b>Cipo</b></span>
          <span>Gammel Mønt 33</span>
          <span>1117 København K</span>
        </p>
      </div>

      <div class="content-small">
        <p>
          <span class="mb-2"
            ><a href="mailto:info@cipo.dk">info@cipo.dk</a></span
          >
          <span><a href="tel:+4512435687">+4512435687</a></span>
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  body {
    font-family: "Montserrat", sans-serif;
    color: #2f4f4f;
    line-height: 1.5;

    background: #ffecd2; /* fallback for old browsers */

    background: linear-gradient(to right, #ffecd2 0%, #fcb69f 100%); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  }

  p {
    font-size: 1rem;
  }

  span {
    display: block;
  }

  .content-small {
    margin-top: 2rem;
  }
</style>
