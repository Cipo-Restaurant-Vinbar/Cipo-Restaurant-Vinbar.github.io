---
import Layout from "../layouts/Layout.astro";
// import { Image } from "@astrojs/image/components";
---

<Layout title="Cipo | Wine bar & Food">
  <main class="container grid-lg text-center">
    <section class="frontpage">
      <div class="title">
        <img src="/logo-no-background.png" alt="Cipo logo" width="192"/>
      </div>

      <div class="content">
        <p>
          Restaurant and natural wine bar | see our <a href="/menu">menu</a>
          <span
            >Add some text <i>here</i> so we can get that SEO shimmer :heart:</span
          >
        </p>
      </div>

      <div class="content">
        <p>
          Parties and other inquiries? | write us on <a
            href="mailto:info@cipo.dk">info@cipo.dk</a
          >
          <span>
            Visit our <i><a href="/">Instagram</a></i> for inspiration
          </span>
        </p>
      </div>

      <div class="content">
        <a href="/" class="btn btn-lg btn-primary">Book a table</a>
      </div>
    </section>

    <section class="content-small gallery">
      <div class="columns">
        <div class="column col-md-12">
          <img src="/images/900x600.jpg" alt="" class="img-responsive" />
        </div>
        <div class="column col-md-12">
          <img src="/images/900x600.jpg" alt="" class="img-responsive" />
        </div>
        <div class="column col-md-12">
          <img src="/images/900x600.jpg" alt="" class="img-responsive" />
        </div>
      </div>

      <div class="columns hide-sm">
        <div class="column col-md-12">
          <img src="/images/900x600.jpg" alt="" class="img-responsive" />
        </div>
        <div class="column col-md-12">
          <img src="/images/900x600.jpg" alt="" class="img-responsive" />
        </div>
        <div class="column col-md-12">
          <img src="/images/900x600.jpg" alt="" class="img-responsive" />
        </div>
      </div>
    </section>

    <section>
      <div class="content">
        <p>
          <span><b>Opening hours</b></span>
          <span>Wednessday-Friday 15.00-00.00</span>
          <span>Saturday 12.00-00.00</span>
        </p>
      </div>

      <div class="content-small">
        <a href="/" class="btn btn-lg btn-primary">Book a table</a>
      </div>
    </section>
  </main>
</Layout>

<style>
  p {
    font-size: 1rem;
  }

  .content a {
    color: #020202;
  }

  span {
    display: block;
  }

  .frontpage {
    min-height: 100vh;
  }

  .title {
    margin-top: 6rem;
  }

  .title h1 {
    font-size: 3rem;
    font-weight: 500;
    text-transform: uppercase;
    padding: 0;
    margin: 0;
  }

  .title h2 {
    font-size: 0.55rem;
    font-weight: 400;
    text-transform: uppercase;
    padding: 0;
    margin: 0;
  }

  .content {
    margin-top: 4rem;
  }

  .content-small {
    margin-top: 2rem;
  }

  .gallery {
    margin-top: -4rem;
  }

  .columns {
    margin-bottom: 0.8rem;
  }

  @media (max-width: 840px) {
    .column {
      margin-bottom: 0.5rem;
    }

    .title {
      margin-top: 4rem;
    }
  }
</style>
